@model ClothBazar.Entities.Category

@{
    ViewBag.Title = "Edit";
}

<br />
<h2>Edit Category</h2>
<hr />
<div class="container">
    <form class="row" method="post">
        <div class="form-group">
            <label>Name</label>
            <input name="Name" value =@Model.Name class="form-control" />
        </div>

        <div class="form-group">
            <label>Description</label>
            <input name="Description" value =@Model.Description class="form-control" />
        </div>
        <br />
        <div class="col-lg-3 form-group">
            <button class="btn-primary form-control" type="submit">Update</button>
        </div>
    </form>
</div>